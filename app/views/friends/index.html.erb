<% if user_signed_in? %>
	<h1>Friend List</h1>
	</br>

	<table class="table table-striped table-bordered table-hover" id="friends">
		<thead class="table-dark">
			<tr>
				<th>Name</th>
				<th>Birthday</th>
				<th>Email</th>
				<th>Phone</th>
				<th>X</th>
				<% if user_signed_in? %>
					<th>user_id</th>
				<% end %>
			</tr>
		</thead>
		<% @friends.each do |friend| %>
			<% if friend.user == current_user %>
		    	<%= render friend %>
		    <% end %>
	  	<% end %>

	</table>
<% else %>
	<h1>WOAH Cowboy! Hold your horses! </h1>
	<br/>
	<p>First, you have to <%= link_to 'Log in', new_user_session_path %>.</p>
<% end %>






